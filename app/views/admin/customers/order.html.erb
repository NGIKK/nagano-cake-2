<div class= 'container'>
 <div class="col-md-10 mx-auto mt-5">

  <div class="row mb-3">
    <h2><strong><%= @customer.full_name %></strong>さんの注文履歴</h2>
  </div>

    <table class ="table">
      <thead>
        <tr class="table-light">
         <th scope="col" style="width: 30%">購入日時</th>
         <th scope="col" style="width: 20%">注文個数</th>
         <th scope="col" style="width: 25%">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
         <% @orders.each do |order|%>
         <td>
         <%=link_to admin_order_path(order.id) do%>
         <%= order.created_at %>
         <% end %>
         </td>
         <td><%= OrderItem.where(order_id: order.id).pluck(:quantity).sum %></td>
         <!--enum日本語化-->
         <td><%= order.status_i18n%></td>
         <% end %>
       </tr>
      </tbody>
    </table>

   <div class="d-flex justify-content-center mt-4">
    <%= paginate @orders %>
   </div>

　　</div>
  </div>
</div>
