<div class="container">
  <div class="col-md-10 mx-auto mt-5">

    <div class="mb-5">
    <h2 class="headline">商品詳細</h2>
    </div>

    <div class="row">
    <div class="col-md-5 d-flex justify-content-center">
    <%= image_tag @item.get_image(300,200) %>
    </div>

    <div class="col-md-6 d-flex justify-content-center mr-5" >
    <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.description %></td>
      </tr>
         <td> 税込価格 </br>
             (税抜価格)
         </td>
         <td valign="middle">
             <%= @item.with_tax_price.to_s(:delimited) %>
             (<%= @item.price_without_tax.to_s(:delimited)%>)円
         </td>
      <tr>
         <td>販売ステータス</td>
         <td><%= @item.sale_status %></td>
      </tr>
     </tbody>
    </table>
    </div>

      <div class="offset-md-6 mt-3">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn w-25", style: "background-color: #1A120B; color: #E5E5CB;" %>
      </div>


  </div>
  </div>
</div>