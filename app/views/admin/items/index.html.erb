<div class= 'container'>
  
  <div class="mt-3">
 <h2>商品一覧</h2>
  
  <table class ="table">
      <thead>
        <tr>
         <th scope="col" style="width: 10%">商品ID</th>
         <th scope="col" style="width: 30%">商品名</th>
         <th scope="col" style="width: 20%">税抜価格</th>
         <th scope="col" style="width: 20%">ジャンル</th>
         <th scope="col" style="width: 20%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item|%>
        <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do%>
          <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price_without_tax %></td>
        <td><%= item.genre.name%></td>
        
        <td>
            <% if item.is_on_sale == true %>
            販売中
            <% else %>
            停止中
            <% end %>
        </td>
       </tr>
       <% end %>
       
      </tbody>
    </table>
  </div>
</div>
