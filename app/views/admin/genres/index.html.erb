<div class= 'container'>
 <div class="col-10 mx-auto mt-5">

 <div class="row">
  <h2>ジャンル一覧・追加</h2>
 </div>

  <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
 <div class="row d-flex mt-3">

  <div class="col-2 text-center">
   <%= f.label :name, "ジャンル名" %>
  </div>

  <div class="col-3">
   <%= f.text_field :name ,placeholder:"ジャンル名", class: "form-control"%>
  </div>

  <div class="col-1">
   <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
  <% end %>

  <div class="row mt-5">
   <div>
    <table class="table">
      <thead class="table-light">
        <tr>
        <th style="width: 20%">ジャンル<th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre|%>
        <tr>
        <td valign="middle"><%= genre.name%></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>



 </div>
</div>
