<div class= 'container mt-5'>
 <div class="col-md-10 mx-auto">

 <div class="mb-5">
  <h2 class="headline">ジャンル一覧・追加</h2>
  <%= render"layouts/error_messages", model: @genre %>
 </div>

  <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
 <div class="row d-flex mt-3">

  <div class="col-md-2 text-center">
   <%= f.label :name, "ジャンル名" %>
  </div>

  <div class="col-md-3">
   <%= f.text_field :name ,placeholder:"ジャンル名", class: "form-control"%>
  </div>

  <div class="col-md-1">
   <%= f.submit "新規登録", class:"btn", style: "background-color: #1A120B; color: #E5E5CB;" %>
  </div>
  <% end %>

  <div class="row mt-5">
   <div class="col-md-5">
    <table class="table table-bordered border-dark table-hover align-middle custom-table">
      <thead class>
        <tr align="center">
        <th colspan="2">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre|%>
        <tr>
        <td valign="middle"><%= genre.name%></td>
        <td align="center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm change_button", style: "background-color: #D5CEA3;" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>



 </div>
</div>
