<div class="container mt-5 d-flex-column space-around">
  <div class="row  row-content">
   <div class="col-md-10">
    <div class="d-flex head-items mb-4">
      <h4 class="col-md-4 bg-light text-center">ショッピングカート</h4>
      <%= link_to 'カートを空にする',clear_cart_items_path, method: :delete, class: "btn btn-danger" %>
     </div>
    <table class="table table-hover table-inverse table-bordered border border-dark">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="align-middle"><%= image_tag cart_item.item.get_image(100, 100), class: "p-2" %> <%= cart_item.item.name %></td>
            <td class="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td class="align-middle">
              <%= form_with(model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true, class: "text-center") do |form| %>
                <%= form.hidden_field :customer_id, :value => current_customer.id %>
                <%= form.hidden_field :item_id, :value => cart_item.item.id %>
                <%= form.select :quantity, *[1..50],{}, class: "form-select-sm" %>
                <%= form.submit "変更", class: "btn btn-success change_button" %>
              <% end %>
            </td>
            <td class="align-middle"><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td class="align-middle text-center"><%= link_to '削除', cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
  <div class="row row-content-middle mt-3">
    <div class="col-md-4">
     <%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-2">
     <table class="table table-inverse table-bordered border border-dark">
       <tbody>
         <tr>
           <th class="bg-light p-2">合計金額</th>
           <td><%= @total_amount.to_s(:delimited) %></td>
         </tr>
       </tbody>
     </table>

    </div>
  </div>
  <div class="row mt-5 row-content">
   <div class="col-md-3 text-center">
    <%= link_to '情報入力へ進む', new_order_path, class: "btn btn-success" %>
   </div>
  </div>
</div>
