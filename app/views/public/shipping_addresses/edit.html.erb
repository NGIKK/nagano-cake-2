<div class="container">
  <div class="row">
    <h1 class="mt-3">配送先一覧</h1>
    <%= form_with model: @shipping_address, url: shipping_address_path, method: :patch do |f| %>
         <div class="form-group mt-3 row">
              <label class="col-md-3">郵便番号（ハイフンなし）</label>
              <div class="col-md-3">
                <%= f.text_field :postal_code, class:"form-control"  %>
              </div>
            </div>

            <div class="form-group mt-3 row">
              <label class="col-md-3">住所</label>
              <div class="col-md-6">
                <%= f.text_field :address , class:"form-control" %>
              </div>
            </div>

            <div class="form-group row mt-3" >
              <label class="col-md-3">宛名</label>
              <div class="col-md-9 d-flex justify-content-between">
                <div class="col-md-4">
                  <%= f.text_field :name ,class:"form-control" %>
                </div>
                <%= f.submit '変更内容を保存', class:"btn btn-success col-md-3 text-right" %>
              </div>
          　</div>
        <% end %>
       </div>
    </div>