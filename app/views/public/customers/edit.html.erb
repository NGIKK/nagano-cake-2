<div class="container">
  <div class="row">
    <div class=" mt-3 mx-auto p-3" style="background-color: #ffffe0; color: #696969;">

    <h1>会員情報編集</h1>

  <%= form_with model: @customer, url:customers_information_path do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group row mt-3" >
      <label class="col-md-3">氏名</label>
      <div class="col-md-3">
        <%= f.text_field :last_name , class:"col-md-2 form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class:"col-md-2 form-control" %>
      </div>
    </div>

    <div class="form-group row mt-3" >
      <label class="col-md-3">フリガナ</label>
      <div class="col-md-3">
        <%= f.text_field :furigana_last_name , class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :furigana_first_name , class:"form-control" %>
      </div>
    </div>

    <div class="form-group mt-3 row">
      <label class="col-md-3">郵便番号</label>
      <div class="col-md-3">
        <%= f.text_field :post_code, class:"form-control"  %>
      </div>
    </div>

    <div class="form-group mt-3 row">
      <label class="col-md-3">住所</label>
      <div class="col-md-6">
        <%= f.text_field :address , class:" form-control" %>
      </div>
    </div>

    <div class="form-group mt-3 row">
      <label class="col-form-label col-md-3">電話番号</label>
      <div class="col-md-3">
        <%= f.text_field :telephone_number, class:" form-control" %>
      </div>
    </div>

    <div class="form-group mt-3 row">
      <label class="col-form-label col-md-3">メールアドレス</label>
      <div class="col-md-3">
        <%= f.text_field :email, class:" form-control" %>
      </div>
    </div>

    <div class="d-flex justify-content-around m-auto">
      <div class="form-group mt-3">
        <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
      </div>
    <% end %>

      <div class="align-items-center mt-3">
        <%= link_to "退会する", customers_check_path, :class => "btn btn-danger ms-3" %>
      </div>
     </div>
    </div>
  </div>
</div>

