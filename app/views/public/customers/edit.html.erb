<div class="container">
  <div class="row">
    <div class=" mt-3 mx-auto p-3" style="background-color: #ffffe0; color: #696969;">

    <h1>会員情報編集</h1>

  <%= form_with model: @customer, url:customers_information_path do |f| %>
    <div class="form-group mt-3 d-flex justify-content-between" style="width: 600px;" >
      <%= f.label :氏名 , :style => "width: 100px"%>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name%>
    </div>

    <div class="form-group mt-3 d-flex justify-content-between" style="width: 600px;">
      <%= f.label :フリガナ , :style => "width: 100px" %>
      <%= f.text_field :furigana_last_name %>
      <%= f.text_field :furigana_first_name %>
    </div>
    <div class="form-group mt-3 d-flex" style="width: 600px;">
      <%= f.label :郵便番号 , :style => "width: 100px" %>
      <%= f.text_field :post_code %>
    </div>
    <div class="form-group mt-3 d-flex " style="width: 600px;">
      <%= f.label :住所,:class => "flex-grow-2" , :style => "width: 100px" %>
      <%= f.text_field :address ,:class => "flex-grow-1"%>
    </div>
    <div class="form-group mt-3 d-flex " style="width: 600px;">
      <%= f.label :電話番号,:class => "flex-grow-2" , :style => "width: 100px" %>
      <%= f.text_field :telephone_number,:class => "flex-grow-1" %>
    </div>
    <div class="form-group mt-3 d-flex " style="width: 600px;">
      <%= f.label :メールアドレス,:class => "flex-grow-2" %>
      <%= f.text_field :email,:class => "flex-grow-1" %>
    </div>
    <div class="form-group mt-3">
      <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="align-items-center" style="width: 200px;">
      <%= link_to "退会する", orders_path, :class => "btn btn-danger d-flex align-items-center ms-3" %>
    </div>
    </div>
  </div>
</div>

