<div class='row'>
  <table class="table table-hover table-inverse">
    <% if @result == [] %>
      <h3 class="mt-3 text-center">検索結果がありません。</h3>
    <% elsif @item.present? %>
    <% @item.each do |f| %>
    <h2 class="mt-3">検索結果 "<%= f.name %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag f.get_image(200,200), class: "image" %></td>
        <td><%= f.name %></td>
        <td>￥<%= f.price_without_tax.to_s(:delimited) %></td>
      </tr>
      <% end %>
    <% else %>
      <h3 class="mt-3 text-center">検索結果がありません。</h3>
    <% end %>
  </table>
</div>
